# TRM-OS Production Environment Configuration for Railway
# =====================================================

# Application Settings
PROJECT_NAME="TRM-OS API v1.0"
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# API Configuration
API_V1_STR="/api/v1"
SECRET_KEY="your-super-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (Railway will provide NEO4J_URL)
# NEO4J_URL will be set by Railway service
# NEO4J_USERNAME will be set by Railway service  
# NEO4J_PASSWORD will be set by Railway service

# CORS Settings
ALLOWED_ORIGINS=["*"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Python Configuration
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# Logging Configuration
ENABLE_ONTOLOGY_LOGGING=true
LOG_REQUEST_BODY=true
LOG_RESPONSE_BODY=false
LOG_PROCESSING_TIME=true

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=100

# TRM-OS Specific Settings
ENABLE_ASYNC_PROCESSING=true
ENABLE_EVENT_BUS=true
ENABLE_VALIDATION_MIDDLEWARE=true 